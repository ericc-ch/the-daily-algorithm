{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "noEmit": true,

    // Main app needs
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    // Remotion needs
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "incremental": true,

    // Shared strict checks
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    // Path aliases
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  // No need for exclude since we're handling all files
  "include": ["src"]
}
